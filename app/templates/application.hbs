<ul class="menu">
    <a class="menu__icon" href="#lifestyle"></a>
    <div class="menu__right">
        <li class="menu__link"><a href="#about">About</a></li>
        <li class="menu__link"><a href="#contact">Contact</a></li>
    </div>
</ul>

<a class="title" href="/"><h1>Amber Rose Crotteau Photo</h1></a>

<ul class="category">
    <div class="line"></div>
    {{#each model as |home|}}
            <li class="category__item"><a href="/#{{home.button}}">{{home.button}}</a></li>
    {{/each}}
    <div class="line"></div>
</ul>

<div class="social">
    <a class="social__link" href="https://www.instagram.com/amber_crotteau">{{fa-icon 'instagram'}}</a>
    <a class="social__link" href="https://www.linkedin.com/amber_crotteau">{{fa-icon 'linkedin'}}</a>
</div>

{{outlet}}

{{#fullpage-js}}

        {{#each model as |home index|}}
            <div class="section featured" style="background:{{home.color}}" data-anchor="{{home.button}}">
                <div class="featured__wrapper">
                    <div class="featured__image featured__image{{index}}" style="background-image:url('{{home.url}}');"></div>
                </div>

                {{collection-modal}}

            </div>
        {{/each}}
        <div class="fp-auto-height section about" style="background-color:{{home.color}}" data-anchor="about">
            <div class="about__image"></div>
            <h1 class="about__title">My Life</h1>
            <p class="about__description">
                I was born and raised in San Luis Obispo California, but currently reside in Long Beach. Capturing moments and memories is what drives me. Whether it's getting up at 5am to shoot surfing and sunrises or spending an evening getting pictures of my cat Suki, the thrill of capturing the beauty of an instant is always there.
            </p>

            <div class="about__social">

            </div>
        </div>
        <div class="fp-auto-height section contact" style="background-color:{{home.color}}" data-anchor="contact">
            <h1 class="contacts__title">Contact</h1>
        </div>

{{/fullpage-js}}
