{{yield}}
<div class="collection {{if isOpen "show"}}">
    <button class="collection__close" {{action 'close'}}>{{fa-icon 'times'}}</button>
    <!-- Collection Slider -->
    {{#each model as |home index|}}
        {{#each home.slides as |slide|}}
            <img src="{{slide}}">
        {{/each}}
    {{/each}}
</div>

<button class="collection__view" {{action 'open'}}>{{fa-icon 'long-arrow-right'}} View Collection</button>
